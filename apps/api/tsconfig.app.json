{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "declarationMap": false
  },
  "include": [
    "package.json",
    "src/**/*.ts",
    "../../libs/shared/src/**/*.ts",
  ],
  "exclude": [
    "src/**/*.spec.ts", 
    "src/**/*.test.ts",
    "../../libs/shared/src/**/*.spec.ts",
    "../../libs/shared/src/**/*.test.ts",
    "../../libs/shared/vitest.setup.mts",
    "**/node_modules/*"
  ],
}
